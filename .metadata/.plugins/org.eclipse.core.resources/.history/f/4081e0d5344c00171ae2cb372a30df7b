package Client_Server;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.StringTokenizer;

class Log_file_analys extends Thread {
	Socket socket;
	BufferedReader entree;
	PrintStream sortie;

	Log_file_analys(Socket socket) {
		this.socket = socket;
		try {
			entree = new BufferedReader(new InputStreamReader(socket.getInputStream()));
			sortie = new PrintStream(socket.getOutputStream());
			this.start();
		}
		catch(IOException exc) {
			try {
				socket.close();
			}
			catch(IOException e){}
		}
	}

	public void run() {
		String texte;
		int compteur = 0;

		try {
			while(!(texte = entree.readLine()).equals("END")) 
                               compteur += (new StringTokenizer(texte, " ,.;:_-+*/\\.;\"'{}()=><\t!\n")).countTokens();
			sortie.println("votre texte possede " + compteur + " mots");
			sortie.close();
			entree.close();
			socket.close();
		}
		catch(IOException e) {}
	}
}

class Serveur {
	public static void main(String[] arg) {

		ServerSocket standardiste;
		Socket socket;

		try {
			standardiste = new ServerSocket(4001);
			System.out.println("Serveur prêt !");
			while(true) {
				socket = standardiste.accept();
	 			new Log_file_analys(socket);
			}
		}
		catch(IOException exc) {
	 		System.out.println("probleme de connexion");
		}
	}
    
}
